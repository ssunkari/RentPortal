extends custom

block content
     // Page Content
     #page-wrapper
      .row
       .col-lg-12
         h1.page-header Expenses Form
         // /.col-lg-12
      .row
       .col-lg-12
        .panel.panel-default
         .panel-heading
          | Please submit your expenses before last day of every month
         .panel-body
          .row
           .col-lg-6
            form(role="form" name="expensesSheet", action='/expenses?user=#{user}', method="post")
             .form-group
              label Pick A Date
              input.form-control#datepicker(type='date', name='selectedDay', required='')
              p.help-block You shall only submit total amount of individual utility for the day.
             .form-group
              label Select Utility
              .radio
               label
                input#optionsRadiosInline1(type='radio', name='utilType', value='gas', checked='')
                | Gas

              .radio
               label
                input#optionsRadiosInline2(type='radio', name='utilType', value='electricity')
                | Electricity

              .radio
               label
                input#optionsRadiosInline3(type='radio', name='utilType', value='household')
                | HouseHold
             .form-group
              label Cost Name
              input.form-control(type='text', name='costName')
             .form-group.input-group
              span.input-group-addon
                  i.fa.fa-gbp
              input.form-control(type='text', name='amount', required='',placeholder='Enter Amount')

             .form-group
              button.btn.btn-primary.btn-lg(type='submit') Submit
              label.error-label
                for error in errors
                    p * #{error}
               p=message